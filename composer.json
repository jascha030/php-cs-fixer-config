{
    "name": "socialbrothers/php-cs-fixer-config",
    "description": "WP Backend default configuration for php-cs-fixer.",
    "license": "MIT",
    "authors": [
        {
            "name": "Jascha van Aalst",
            "email": "jascha@socialbrothers.nl"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42",
        "roave/security-advisories": "dev-latest",
        "friendsofphp/php-cs-fixer": "^3.54"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "SocialBrothers\\PhpCsFixer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SocialBrothers\\PhpCsFixer\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        }
    },
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer",
        "fix": "@php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "lint": "@php-cs-fixer fix --dry-run --diff --diff-format=udiff --config=.php-cs-fixer.dist.php"
    }
}
