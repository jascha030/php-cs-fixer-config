{
    "name": "jascha030/php-cs-fixer-config",
    "description": "Personal default configurations for php-cs-fixer.",
    "license": "MIT",
    "authors": [
        {
            "name": "Jascha van Aalst",
            "email": "jascha@socialbrothers.nl"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42",
        "friendsofphp/php-cs-fixer": "^3.54",
        "roave/security-advisories": "dev-latest"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Jascha030\\PhpCsFixer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jascha030\\PhpCsFixer\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        },
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        }
    },
    "scripts": {
        "fix": [
            "@composer validate",
            "@composer normalize",
            "@php-cs-fixer:fix"
        ],
        "lint": "@php-cs-fixer fix --dry-run --diff --diff-format=udiff --config=.php-cs-fixer.dist.php",
        "php-cs-fixer": "vendor/bin/php-cs-fixer",
        "php-cs-fixer:fix": "@php-cs-fixer fix --config=.php-cs-fixer.dist.php"
    },
    "scripts-descriptions": {
        "fix": "Runs PHP-CS-Fixer with custom config and Composer normalize to format this composer.json file.",
        "lint": "Run PHP-CS-fixer with `--dry-run` parameter.",
        "php-cs-fixer:fix": "Run PHP-CS-Fixer with our custom configuration `.php-cs-fixer.dist.php`."
    }
}
